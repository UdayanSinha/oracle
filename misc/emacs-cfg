(custom-set-variables
 ;; custom-set-variables was added by Custom.
 ;; If you edit it by hand, you could mess it up, so be careful.
 ;; Your init file should contain only one such instance.
 ;; If there is more than one, they won't work right.
 '(column-number-mode t)
 '(custom-enabled-themes '(tsdh-dark))
 '(display-battery-mode t)
 '(display-time-mode t)
 '(global-display-line-numbers-mode t)
 '(inhibit-startup-screen t)
 '(package-selected-packages '(minimap))
 '(size-indication-mode t)
 '(tool-bar-mode nil))
(custom-set-faces
 ;; custom-set-faces was added by Custom.
 ;; If you edit it by hand, you could mess it up, so be careful.
 ;; Your init file should contain only one such instance.
 ;; If there is more than one, they won't work right.
 '(default ((t (:family "Source Code Pro" :foundry "ADBO" :slant normal :weight regular :height 113 :width normal)))))

;; Set indentation width
(setq-default indent-tabs-mode t)
(setq-default tab-width 8)
(setq c-basic-offset 8)

;; Enable whitespace-mode
(global-whitespace-mode t)

;; Set the default fill-column value
(setq-default fill-column 80)

;; Enable column indicator globally
(global-display-fill-column-indicator-mode)

;; Highlight lines longer than 80 columns
(setq whitespace-line-column 80)

;; Remove trailing whitespace on file save globally
(add-hook 'before-save-hook 'delete-trailing-whitespace)

;; Remember recently opened files
(recentf-mode 1)

;; Remember last location in files
(save-place-mode 1)

;; Revert buffers for changed files
(global-auto-revert-mode 1)

;; Revert dired and other buffers
(setq global-auto-revert-non-file-buffers t)
